{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "palette": {
    "white": "#DDDDDD",
    "black": "#111111",
    "red": "#dc2f02",
    "orange": "#f77f00",
    "yellow": "#FBBA18",
    "grey": "#264653",

    "git-foreground": "p:white",
    "git-background": "#2a9d8f",
    "path-green": "#3EC669",
    "ps-blue":  "#0973C0",
    "ps-lightblue": "#7FD5EA",
    "ubuntu-orange": "#D24413",
    "ubuntu-purple": "#77216F"
    
},
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:yellow",
          "properties": {
            "prefix": "",
            "postfix": "",
            "root_icon": "\uF0E7 "
          }
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "postfix": "",
            "windows": "",
            "ubuntu": "<p:ubuntu-orange>ubuntu </>",
            "wsl": "wsl",
            "wsl_separator": ":"
          } 
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "mapped_shell_names": {
              "pwsh": "<p:ps-blue>PS \u276F_</>",
              "bash": "<p:ubuntu-orange>\u276F_</>"
            }
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "time_format": "15:04:05"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path-green",
          "properties": {
            "enable_hyperlink": false,
            "prefix": "",
            "postfix": "",
            "folder_icon": "\uf07b",
            "style": "agnoster_full"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\uE0B4",
          "leading_diamond": " \uE0B6",
          "foreground": "p:git-foreground",
          "background": "p:git-background",
          "properties": {
            "fetch_status": false,
            "fetch_stash_count": false,
            "fetch_upstream_icon": true,
            "prefix": "",
            "postfix": "",
            "branch_icon": "\ue725 "
          }
        },
        {
          "type": "battery",
          "style": "diamond",
          "trailing_diamond": "\uE0B4",
          "leading_diamond": " \uE0B6",
          "foreground": "#193549",
          "background": "#ffeb3b",
          "properties": {
            "battery_icon": "",
            "discharging_icon": "\u21E3 ",
            "charging_icon": "\u21E1 ",
            "charged_icon": "\u0095 ",
            "color_background": false,
            "charged_color": "#4caf50",
            "charging_color": "#40c4ff",
            "discharging_color": "#ff5722",
            "prefix": "",
            "postfix": "",
            "display_charging": true
          }
        },
        {
          "type": "executiontime",
          "style": "diamond",
          "trailing_diamond": "\uE0B4",
          "leading_diamond": " \uE0B6",
          "foreground": "p:white",
          "foreground_templates": [
            "{{ if gt .Ms 4999 }}p:white{{ end }}",
            "{{ if gt .Ms 2000 }}p:black{{ end }}"
          ],
          "background": "p:grey",
          "background_templates": [
            "{{ if gt .Ms 4999 }}p:red{{ end }}",
            "{{ if gt .Ms 2000 }}p:yellow{{ end }}"
          ],
          "properties": {
            "threshold": 150,
            "style": "round",
            
            "prefix": "",
            "postfix": ""
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "properties": {
            "always_enabled": false,
            "template": "{{ if gt .Code 0 }}<p:red>\ue20d {{.Text}}</>{{ else }}<p:path-green>\uf444</>{{ end }}",
            "prefix": " ",
            "postfix": ""
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "background": "transparent",
          "properties": {
            "mapped_shell_names": {
              "prefix": "",
              "postfix": "",
              "pwsh": "<p:ps-lightblue>\u276F</>",
              "bash": "<p:ubuntu-purple>$</>"
            }
          }
        }
      ]
    }
  ]
}