{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "palette": {
    "white": "#DDDDDD",
    "red": "#dc2f02",
    "orange": "#f77f00",
    "yellow": "#FBBA18",
    "green": "#3EC669",
    "path": "p:green",

    "windows1": "#19B7A4",
    "windows2": "#FFFFFF",
    "windows3": "#0079D8",

    "macos1": "#AEAEB2",
    "macos2": "#636366",
    "macos3": "#D1D1D6",

    "linux1": "#FFFFFF",
    "linux2": "#FFBB01",

    "powershell1": "#0973C0",
    "powershell2": "#7FD5EA",

    "ubuntu1": "#E95420",
    "ubuntu2": "#77216F",
    "ubuntu3": "#5E2750",
    "ubuntu4": "#AEA79F",

    "debian1": "#d70651",
    "debian2": "#980539",
    "debian3": "#E0E0E0",

    "kali1": "#FFFFFF",
    "kali2": "#367BF0",
    "kali3": "#163671",
 
    "mint1": "#86BE43",
    "mint2": "#2E2E2E",
    "mint3": "#FFFFFF",

    "arch1": "#1793d1",
    "arch2": "#333333",
    "arch3": "#759FBF",

    "fedora1": "#294172",
    "fedora2": "#3C6EB4",
    "fedora3": "#8c8c8c",

    "centos1": "#9CCD2A",
    "centos2": "#EFA724",
    "centos3": "#A14F8C",
    "centos4": "#262577",

    "manjaro1": "#34BE5B",
    "manjaro2": "#16A085",
    "manjaro3": "#FFFFFF",

    "raspbian1": "#C41949",
    "raspbian2": "#6BC048",
    "raspbian3": "#FFFFFF",

    "opensuse1": "#73BA25",
    "opensuse2": "#174F4F",
    "opensuse3": "#35B9AB",

    "gentoo1" : "#54487A",
    "gentoo2" : "#DDDFFF",
    "gentoo3" : "#6E56AF",

    "azure-blue": "#0083CC",
    "battery-charging-green": "#2a9d8f"

  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:yellow",
          "properties": {
            "prefix": "",
            "postfix": "",
            "root_icon": "\uF0E7 "
          }
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "debian": "<p:debian-pink>ïŒ†</>",
            "windows": "<p:ps-blue>\uf17a</>",
            "ubuntu": "<p:ubuntu-orange>ubuntu</>",
            "wsl": "wsl",
            "wsl_separator": ":"
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "mapped_shell_names": {
              "pwsh": "<p:powershell1>PS \u276F_</>",
              "bash": "<p:ubuntu-orange>\u276F_</>"
            }
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "p:azure-blue",
          "background": "transparent",
          "properties": {
            "template": "{{ .EnvironmentName }}",
            "prefix": "\uFD03 "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "time_format": "15:04:05"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"macos\" }}p:macos1{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu1{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian1{{ end }}",
            "{{ if eq .OS \"kali\" }}p:kali1{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint1{{ end }}",
            "{{ if eq .OS \"arch\" }}p:arch1{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora1{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos1{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro1{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian1{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse1{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo1{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows1{{ end }}",
            "{{ if eq .Shell \"pwsh\" }}p:powershell1{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux1{{ end }}",
            "p:green"
          ],
          "properties": {
            "enable_hyperlink": true,
            "max_depth": 2,
            "prefix": "",
            "postfix": "",
            "folder_icon": "\uf6d7",
            "mapped_locations": {
              "~\\Documents": "\uf718",
              "~\\Desktop": "\uf108",
              "~\\Videos": "\uf03d",
              "~\\Pictures": "\uf1c5",
              "~\\Downloads": "\uf6d9",
              "~\\qmk_firmware": "\uf812",
              "~\\qmk_firmware\\keyboards": "\uf812",
              "~": "\uf7db"
            },
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:yellow",
          "background": "transparent",
          "properties": {
            "fetch_status": false,
            "fetch_stash_count": false,
            "fetch_upstream_icon": true,
            "prefix": " (",
            "postfix": ")",
            "branch_icon": "\ue725 "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "properties": {
            "always_enabled": false,
            "template": "{{ if gt .Code 0 }}<p:red>\ue20d {{.Text}}</>{{ end }}",
            "prefix": " ",
            "postfix": ""
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "background": "transparent",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "<p:ps-lightblue>\u276F</>",
              "bash": "<p:ubuntu-purple>$</>"
            }
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "horizontal-offset": -2,
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "threshold": 150,
            "style": "round"
          }
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:battery-charging-green{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:yellow{{end}}",
            "{{if eq \"Full\" .State.String}}p:green{{end}}"
          ],
          "properties": {
            "discharging_icon": "\uf58b ",
            "charging_icon": "\uf1e6 ",
            "charged_icon": "\uf58e ",
            "prefix": "",
            "postfix": "\uf8ef"
          }
        }
      ]
    }
  ]
}