{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "palette": {
    "white": "#DDDDDD",
    "red": "#dc2f02",
    "orange": "#f77f00",
    "yellow": "#FBBA18",
    "charging-green": "#2a9d8f",
    "path-green": "#3EC669",
    "ps-blue":  "#0973C0",
    "ps-lightblue": "#7FD5EA",
    "ubuntu-orange": "#D24413",
    "ubuntu-purple": "#77216F",
    "debian-pink": "#d70651",
    "azure-blue": "#0083CC"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "root",
          "style": "plain",
          "foreground": "p:yellow",
          "properties": {
            "prefix": "",
            "postfix": "",
            "root_icon": "\uF0E7 "
          }
        },
        {
          "type": "os",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "debian": "<p:debian-pink>ïŒ†</>",
            "windows": "<p:ps-blue>\uf17a</>",
            "ubuntu": "<p:ubuntu-orange>ubuntu</>",
            "wsl": "wsl",
            "wsl_separator": ":"
          } 
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "mapped_shell_names": {
              "pwsh": "<p:ps-blue>PS \u276F_</>",
              "bash": "<p:ubuntu-orange>\u276F_</>"
            }
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "p:azure-blue",
          "background": "transparent",
          "properties": {
            "template": "{{ .EnvironmentName }}",
            "prefix": "\uFD03 "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "p:white",
          "properties": {
            "prefix": "",
            "time_format": "15:04:05"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "p:path-green",
          "properties": {
            "enable_hyperlink": true,
            "max_depth": 2,
            "prefix": "",
            "postfix": "",
            "folder_icon": "\uf6d7",
            "mapped_locations": {
              "~\\Documents": "\uf718",
              "~\\Desktop": "\uf108",
              "~\\Videos": "\uf03d",
              "~\\Pictures": "\uf1c5",
              "~\\Downloads": "\uf6d9",
              "~\\qmk_firmware": "\uf812",
              "~\\qmk_firmware\\keyboards": "\uf812",
              "~": "\uf7db"
            },
            "style": "agnoster_short"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "p:yellow",
          "background": "transparent",
          "properties": {
            "fetch_status": false,
            "fetch_stash_count": false,
            "fetch_upstream_icon": true,
            "prefix": " (",
            "postfix": ")",
            "branch_icon": "\ue725 "
          }
        },
        {
          "type": "exit",
          "style": "plain",
          "properties": {
            "always_enabled": false,
            "template": "{{ if gt .Code 0 }}<p:red>\ue20d {{.Text}}</>{{ else }}<p:path-green>\uf444</>{{ end }}",
            "prefix": " ",
            "postfix": ""
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "background": "transparent",
          "properties": {
            "mapped_shell_names": {
              "pwsh": "<p:ps-lightblue>\u276F</>",
              "bash": "<p:ubuntu-purple>$</>"
            }
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "horizontal-offset": -2,
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:white",
          "foreground_templates": [
            "{{ if gt .Ms 4999 }}p:red{{ end }}",
            "{{ if gt .Ms 2000 }}p:orange{{ end }}"
          ],
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "threshold": 150,
            "style": "round"
          }
          
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:charging-green{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:yellow{{end}}",
            "{{if eq \"Full\" .State.String}}p:path-green{{end}}"
          ],
          "properties": {
            "discharging_icon": "\uf58b ",
            "charging_icon": "\uf1e6 ",
            "charged_icon": "\uf58e ",
            "prefix": "",
            "postfix": "\uf8ef"
            
          }
        }
      ]
    }
  ]
}