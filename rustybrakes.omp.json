{
  "comment": "Read about the features of this theme at https://github.com/RustyBrakes/omp-theme",
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "final_space": false,
  "palette": {
    "white": "#DDDDDD",
    "red": "#dc2f02",
    "orange": "#f77f00",
    "yellow": "#FBBA18",
    "green": "#20aa0e",
    "light-green": "#67c75a",

    "windows1": "#19B7A4",
    "windows2": "#FFFFFF",
    "windows3": "#0079D8",

    "macos1": "#AEAEB2",
    "macos2": "#636366",
    "macos3": "#D1D1D6",

    "linux1": "#FFFFFF",
    "linux2": "#FFBB01",

    "powershell1": "#0973C0",
    "powershell2": "#7FD5EA",
    "azure-blue": "#0083CC",

    "ubuntu1": "#E95420",
    "ubuntu2": "#BA47AE",
    "ubuntu3": "#AEA79F",

    "debian1": "#F1206B",
    "debian2": "#E0E0E0",
    "debian3": "#E0E0E0",
 
    "mint1": "#86BE43",
    "mint2": "#505050",
    "mint3": "#FFFFFF",

    "arch1": "#1793d1",
    "arch2": "#505050",
    "arch3": "#759FBF",

    "fedora1": "#435B8C",
    "fedora2": "#5688CE",
    "fedora3": "#8c8c8c",

    "centos1": "#9CCD2A",
    "centos2": "#EFA724",
    "centos3": "#A14F8C",
    "centos4": "#262577",

    "manjaro1": "#34BE5B",
    "manjaro2": "#16A085",
    "manjaro3": "#FFFFFF",

    "raspbian1": "#C41949",
    "raspbian2": "#6BC048",
    "raspbian3": "#FFFFFF",

    "opensuse1": "#73BA25",
    "opensuse2": "#174F4F",
    "opensuse3": "#35B9AB",

    "gentoo1" : "#A189E2",
    "gentoo2" : "#DDDFFF",
    "gentoo3" : "#6E56AF"

  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"arch\" }}p:arch1{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos1{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian1{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora1{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo1{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux2{{ end }}",
            "{{ if eq .OS \"macos\" }}p:macos1{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro1{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint1{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse1{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian1{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu1{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows3{{ end }}",
            "p:white"
          ],
          "properties": {
            "prefix": "",
            "postfix": " ",
            "windows": "\uf17a ",
            "ubuntu": "ubuntu \uf31b",
            "centos": "CentOS \uf304",
            "wsl": "wsl",
            "wsl_separator": ": "
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"arch\" }}p:arch3{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos3{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian3{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora3{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo3{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux3{{ end }}",
            "{{ if eq .OS \"macos\" }}p:macos3{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro3{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint3{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse3{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian3{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu3{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows3{{ end }}",
            "p:white"
          ],
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": " ",
            "mapped_shell_names": {
              "pwsh": "<p:powershell1>PS \uf68c</>"
            }
          }
        },
        {
          "type": "az",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "p:azure-blue",
          "background": "transparent",
          "properties": {
            "template": "{{ .EnvironmentName }}",
            "prefix": "\uFD03 "
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"arch\" }}p:arch2{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos2{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian2{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora2{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo2{{ end }}",
            "{{ if eq .OS \"kali\" }}p:kali2{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux2{{ end }}",
            "{{ if eq .OS \"macos\" }}p:macos2{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro2{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint2{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse2{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian2{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu2{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows2{{ end }}",
            "p:white"
          ],
          "properties": {
            "prefix": "",
            "time_format": "3:04PM"
          }
        },
        {
          "type": "path",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"arch\" }}p:arch2{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos2{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian2{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora2{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo2{{ end }}",
            "{{ if eq .OS \"kali\" }}p:kali2{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux2{{ end }}",
            "{{ if eq .OS \"macos\" }}p:macos2{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro2{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint2{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse2{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian2{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu2{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows2{{ end }}",
            "p:green"
          ],
          "properties": {
            "enable_hyperlink": true,
            "max_depth": 2,
            "prefix": "",
            "postfix": "",
            "folder_icon": "\uf6d7",
            "style": "agnoster_short"
          }
        },
        {
          "type": "text",
          "style": "plain",
          "foreground_templates": [
            "{{ if eq .OS \"arch\" }}p:arch2{{ end }}",
            "{{ if eq .OS \"centos\" }}p:centos2{{ end }}",
            "{{ if eq .OS \"debian\" }}p:debian2{{ end }}",
            "{{ if eq .OS \"fedora\" }}p:fedora2{{ end }}",
            "{{ if eq .OS \"gentoo\" }}p:gentoo2{{ end }}",
            "{{ if eq .OS \"kali\" }}p:kali2{{ end }}",
            "{{ if eq .OS \"linux\" }}p:linux2{{ end }}",
            "{{ if eq .OS \"macos\" }}p:macos2{{ end }}",
            "{{ if eq .OS \"manjaro\" }}p:manjaro2{{ end }}",
            "{{ if eq .OS \"mint\" }}p:mint2{{ end }}",
            "{{ if eq .OS \"opensuse\" }}p:opensuse2{{ end }}",
            "{{ if eq .OS \"raspbian\" }}p:raspbian2{{ end }}",
            "{{ if eq .OS \"ubuntu\" }}p:ubuntu2{{ end }}",
            "{{ if eq .Shell \"pwsh\" }}p:powershell2{{ end }}",
            "{{ if eq .OS \"windows\" }}p:windows2{{ end }}",
            "p:green"
          ],
          "background": "transparent",
          "properties": {
            "template": "{{ if gt .Code 0 }}<p:red>error \uf467</>{{ else }}{{ if eq .Root true }}<p:yellow>\uF0E7</>{{ else }}{{ if eq .OS \"macos\" }}%{{ else }}{{ if eq .OS \"windows\" }}\u276F{{ else }}${{ end }}{{ end }}{{ end }}{{ end }}"
          }
        }
      ]
    },
    {
      "type": "rprompt",
      "alignment": "right",
      "horizontal-offset": -2,
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "properties": {
            "prefix": "",
            "postfix": "",
            "threshold": 150,
            "style": "round"
          }
        },
        {
          "type": "git",
          "style": "diamond",
          "trailing_diamond": "\uE0B4",
          "leading_diamond": " \uE0B6",
          "foreground": "transparent",
          "background": "p:yellow",
          "properties": {
            "template": "[{{ .UpstreamIcon }}]({{ .UpstreamURL }}){{ .HEAD }}",
            "fetch_status": true,
            "fetch_stash_count": false,
            "fetch_upstream_icon": true,
            "prefix": "",
            "postfix": "",
            "branch_icon": "\ue725 "
          }
        },
        {
          "type": "battery",
          "style": "plain",
          "foreground": "p:white",
          "background": "transparent",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}p:light-green{{end}}",
            "{{if eq \"Discharging\" .State.String}}p:yellow{{end}}",
            "{{if eq \"Full\" .State.String}}p:green{{end}}"
          ],
          "properties": {
            "discharging_icon": "\uf58c ",
            "charging_icon": "\uf58f ",
            "charged_icon": "\uf584 ",
            "prefix": " ",
            "postfix": "",
            "template": "{{ if eq \"Unknown\" .State.String}}\uf590{{ else }}{{.Icon}}{{ end }}{{ if not .Error }}{{.Percentage\uf8ef}}{{ end }}{{.Error}}"
          }
        }
      ]
    }
  ]
}